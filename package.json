{
  "name": "frontend-guys",
  "version": "1.0.0",
  "scripts": {
  	"setup:dev" : "sh config/setup_dev.sh",
    "setup:machine": "sh config/machine-install.sh",
  	"start": "docker-compose up -d",
    "sync": "docker-osx-dev",
  	"sass:compile": "sass wordpress/wp-content/themes/fe-guys/sass/style.scss wordpress/wp-content/themes/fe-guys/style.css",
    "sass:watch": "sass --watch wordpress/wp-content/themes/fe-guys/sass:wordpress/wp-content/themes/fe-guys",
    "wordpress:fix-permissions": "docker exec fe_guys_server config/fix-permissions.sh",
    "wordpress:db-backup" : "sh config/wordpress.sh backup",
    "wordpress:db-restore": "docker exec fe_guys_server /bin/bash -c  \"wp db import /data/db.sql --allow-root\""
  },
  "main": "index.js",
  "author": "Adiv Ohayon",
  "license": "MIT"
}
