{
  "name": "frontend-guys",
  "version": "1.0.0",
  "scripts": {
  	"setup:dev" : "sh scripts/setup_dev.sh",
    "setup:machine": "sh scripts/machine-install.sh",
    "dev:start": "sh scripts/dev.sh start",
    "dev:stop": "sh scripts/dev.sh stop",
  	"app:start": "sh scripts/app.sh start",
    "app:stop": "sh scripts/app.sh stop",
    "app:sync": "docker-osx-dev",
  	"sass:compile": "sass wordpress/wp-content/themes/fe-guys/sass/style.scss wordpress/wp-content/themes/fe-guys/style.css",
    "sass:watch": "sass --watch wordpress/wp-content/themes/fe-guys/sass:wordpress/wp-content/themes/fe-guys",
    "wordpress:fix-permissions": "sh scripts/wordpress.sh fix-permissions",
    "wordpress:backup" : "sh scripts/wordpress.sh backup",
    "wordpress:restore": "sh scripts/wordpress.sh restore"
  },
  "main": "index.js",
  "author": "Adiv Ohayon",
  "license": "MIT"
}
